{{#if addNewStory}}
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" }}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" }}
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      {{input value=category id="category" }}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" type="number" }}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <div class="form-group">
      <label for="body">Story Body</label>
      {{input value=body id="body"}}
    </div>
    <button {{action 'save'}}>Save</button>
  </form>
</div>
{{else}}
    <button {{action 'showStoryForm'}}>Create New Story</button>
{{/if}}
