{{#if editStoryForm}}
  <h4>Update {{story.owner}}'s {{story.type}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=story.title}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=story.author}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category" placeholder=story.category}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=story.image}}
      </div>

      <div class="form-group">
        <label for="body">Story Body</label>
        {{input value=body id="body" placeholder=story.body}}
      </div>
      <button {{action 'update' story}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'editStoryForm'}}>Update</button>
{{/if}}
